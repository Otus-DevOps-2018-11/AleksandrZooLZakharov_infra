# Where and how to store data.
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

# Where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# Network interfaces
net:
  # default - Jinja2 variable. It works if LEFT variable in expression is not defined
  port: {{ mongo_port | default('27017') }}
  bindIp: {{ mongo_bind_ip }}
